body
    padding-top: 0

.strike
    position relative

    border-bottom: 1px #ddd solid
    height: 20px

    margin-bottom: 20px

    .or
        position: absolute
        left: 48%
        top: 7px
        padding: 0 3px
        background-color: white

.block
  overflow hidden

.typeform-widget
  width: 100%
  height: 700px
  margin-top: -70px

.app-navbar
  font-size 13px
  letter-spacing .15em
  .navbar-brand
    font-size 13px

.app-beavr-masthead
  padding-bottom: 7%

.masthead-title
  margin-top: 40px
  font-size: 61px
  line-height: 61px
  color:white

.masthead-scroll-arrow
  display: block
  position: absolute
  bottom: 2%
  left: 49%
  right: auto

.app-block-intro
  padding-top: 7%

.app-block-intro-index
  text-align: center
  background: url('./img/masthead-bg-city.png') no-repeat center top
  background-attachment: relative
  background-position: center center
  padding-top: 8%
  box-sizing:border
  width: 100%
  -webkit-background-size: 100%
  -moz-background-size: 100%
  -o-background-size: 100%
  background-size: 100%
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover
  min-height: 800px
  margin-bottom: 90px

  img
    text-align center
    width 80%
    border-bottom none !important

.app-block-truck img,
.app-block-chat img
.app-block-race-car img
  width: 400px
  margin-top: -75px


.app-block-super-beavr
  margin-top:30px

.app-block-super-beavr img
  width: 475px
  margin-top: -35px

.app-block-profile img
  width: 400px
  margin-top: -35px

.app-block-pool img
  margin-top: 100px
  width: 500px

.app-block-race-car img
  width: 470px

.app-block-piggy-bank img
  width: 420px
  margin-top: 10px

.app-block-employer-picker img
  width: 470px
  margin-top: -120px


.app-block-giraffe img
  width:400px
  margin-top: -120px

@media (max-width: 768px)
  .reset-margins-xs
    margin: 0 !important
  .reset-padding-xs
    padding: 0 !important

@media (max-width: 480px)
  .app-block-game-img
    transform scale(1.5) !important
  .app-block-intro-index
    min-height: 500px

@media (min-width: 768px)
  .app-block-racecar-img
    margin-top -380px
    margin-left 0

.app-block-footer
  padding-top: 70px
  font-size: 15px
  background-color transparent
  color #424

.app-translate-15
  -webkit-transform translateY(15px)
  -ms-transform translateY(15px)
  transform translateY(15px)

.app-translate-50
  -webkit-transform translateY(50px)
  -ms-transform translateY(50px)
  transform translateY(50px)

.app-translate-5
  -webkit-transform translateY(5%)
  -ms-transform translateY(5%)
  transform translateY(5%)

.app-translate-10
  -webkit-transform translateY(10%)
  -ms-transform translateY(10%)
  transform translateY(10%)

@media (max-width: 420px)
  .masthead-title
    font-size 32px !important
    line-height: 45px

@media (max-width: 350px)
  .masthead-title
    font-size 42px !important
